{
  "name": "pilotpros-operating-system",
  "version": "1.0.0",
  "description": "PilotProOS - Business Process Operating System",
  "main": "backend/src/server.js",
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev-auto-detect.js",
    "dev:docker": "npm run docker:dev",
    "dev:local": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:ai-agent\" \"npm run dev:n8n\"",
    "dev:sqlite": "cross-env DB_TYPE=sqlite npm run dev:local",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:ai-agent": "cd ai-agent && npm run dev",
    "dev:n8n": "./start-n8n-postgres.sh",
    "setup": "npm run install:all && npm run setup:env",
    "setup:env": "node scripts/setup-environment.js",
    "reset": "npm run docker:clean && npm run clean:local && npm run setup",
    "clean:local": "rm -rf node_modules backend/node_modules frontend/node_modules ai-agent/node_modules",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:detached": "docker-compose -f docker-compose.dev.yml up -d --build",
    "docker:dev:stop": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:reset": "docker-compose -f docker-compose.dev.yml down -v && docker-compose -f docker-compose.dev.yml up --build",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:psql": "docker-compose -f docker-compose.dev.yml exec postgres-dev psql -U pilotpros_user -d pilotpros_db",
    "docker:clean": "docker-compose -f docker-compose.dev.yml down -v --rmi all --remove-orphans",
    "import:backup": "node scripts/import-backup.js",
    "export:backup": "node scripts/export-backup.js",
    "migrate:postgres": "node scripts/migrate-to-postgres.js",
    "build": "npm run build:backend && npm run build:frontend && npm run build:ai-agent",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:ai-agent": "cd ai-agent && npm run build",
    "start": "npm run start:all",
    "start:all": "concurrently \"npm run start:backend\" \"npm run start:ai-agent\" \"npm run start:n8n\"",
    "start:backend": "cd backend && npm start",
    "start:ai-agent": "cd ai-agent && npm start",
    "start:n8n": "./start-n8n-postgres.sh",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../ai-agent && npm install",
    "deploy:client": "node scripts/deploy-client-sanitized.js",
    "package:client": "node scripts/package-client.js",
    "build:image": "node scripts/build-client-image.js",
    "deploy:scripts": "./scripts/deploy-client.sh",
    "deploy:quick": "./scripts/01-system-setup.sh && ./scripts/02-application-deploy.sh && ./scripts/03-security-hardening.sh && ./scripts/04-workflow-automation.sh",
    "n8n:setup": "./scripts/setup-n8n-postgres.sh",
    "n8n:start": "./start-n8n-postgres.sh",
    "n8n:stop": "pkill -f 'npx n8n'",
    "dev:setup": "./scripts/setup-developer-access.sh",
    "test": "npm run test:backend && npm run test:frontend && npm run test:integration",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:integration": "./scripts/test-integration.sh",
    "test:docker": "docker-compose -f docker-compose.dev.yml exec backend-dev npm test",
    "test:postgresql": "./scripts/test-postgresql-integration.sh"
  },
  "dependencies": {
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "n8n": "^1.106.3"
  },
  "devDependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "ora": "^7.0.1"
  },
  "workspaces": [
    "backend",
    "frontend",
    "ai-agent"
  ],
  "keywords": [
    "business-automation",
    "workflow-os",
    "process-automation",
    "enterprise-appliance",
    "ai-assistant",
    "containerized-platform",
    "plug-and-play",
    "smb-automation"
  ],
  "author": "PilotPro Team",
  "license": "Commercial",
  "repository": {
    "type": "git",
    "url": "https://github.com/pilotpro/pilotpros.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
