# PilotProOS Production Environment Configuration
# SECURITY CRITICAL: Never commit this file to version control

# Environment
NODE_ENV=production

# Backend Configuration  
PORT=3001
HOST=0.0.0.0
FRONTEND_URL=https://yourdomain.com

# Database Configuration (Production)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=pilotpros_db
DB_USER=pilotpros_user
DB_PASSWORD=CHANGE_IN_PRODUCTION_SECURE_RANDOM_PASSWORD

# n8n Configuration (Production)
N8N_URL=http://n8n:5678
N8N_API_KEY=CHANGE_IN_PRODUCTION_SECURE_API_KEY
N8N_ADMIN_USER=admin
N8N_ADMIN_PASSWORD=CHANGE_IN_PRODUCTION_SECURE_PASSWORD
N8N_USER=admin
N8N_PASSWORD=CHANGE_IN_PRODUCTION_SECURE_PASSWORD

# Frontend Configuration (Production)
VITE_API_URL=https://yourdomain.com/api
VITE_N8N_URL=https://yourdomain.com/n8n

# Ollama Configuration (Production)
OLLAMA_URL=http://ollama:11434

# Company Branding (Production)
COMPANY_NAME=YourCompanyName
DOMAIN=yourdomain.com

# Security Configuration
JWT_SECRET=CHANGE_IN_PRODUCTION_ULTRA_SECURE_JWT_SECRET_MIN_32_CHARS
JWT_EXPIRY=24h
BCRYPT_ROUNDS=12

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/opt/pilotpros/logs/backend.log
LOG_MAX_SIZE=10MB
LOG_ROTATE=7d

# Error Notification System (Production)
SUPPORT_EMAIL_USER=support@yourdomain.com
SUPPORT_EMAIL_PASS=CHANGE_IN_PRODUCTION_APP_PASSWORD
SUPPORT_EMAIL_TO=support@yourdomain.com,alerts@yourdomain.com
ERROR_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/PRODUCTION/WEBHOOK