FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements-fixed.txt requirements.txt

# Install Python dependencies with timeout and retries
RUN pip install --no-cache-dir --timeout=120 -r requirements.txt

# Try to install CrewAI separately (may fail but container will still work)
RUN pip install --no-cache-dir crewai==0.28.0 || echo "CrewAI installation failed, continuing..."

# Copy application code
COPY . .

# Create non-root user
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Copy start script first before changing ownership
COPY --chown=appuser:appuser start.sh /app/start.sh

# Run both worker and API server
CMD ["sh", "start.sh"]