# DOCKERFILE VELOCE PER SVILUPPO - NO REBUILD OGNI CAZZO DI VOLTA!
FROM python:3.11-slim

# Install system dependencies ONCE
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install Python dependencies ONCE (solo quando cambiano requirements)
COPY requirements-working.txt requirements.txt
RUN pip install --no-cache-dir --timeout=120 -r requirements.txt

# Create non-root user
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# IL CODICE VIENE MONTATO COME VOLUME - NO COPY!
# Vedi docker-compose.yml per volume mount

# Start command che ricarica automaticamente
CMD ["python", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]